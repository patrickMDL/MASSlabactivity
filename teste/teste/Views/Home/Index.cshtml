@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>

    <script type="text/javascript" src="~/lib/jquery/jquery-3.4.1.min.js">
        $(document).ready(function () {
            $("#bntLocation").click(function () {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var apiURL = "https://api.weatherapi.com/v1/current.json?key=5b34aa6378dd4d889bf142611201002&q=" + position.coords.latitude + "," + position.coords.longitude;
                    $.getJSON(apiURL, function (data) {
                        var forecast = data.current.temp_c;
                        var weather = $("weather");
                        weather.append(forecast + 'º C');
                    }).error(function (e) {
                        $("weather").append('Sorry! Not Found');
                    })

                })

            });
        });
    </script>
</head>
<body>
    <p>Click the button to get your coordinates.</p>

    <button id="bntLocation" onclick="">Try It</button>

    <p id="weather"></p>

</body>
</html>
